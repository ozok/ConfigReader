@using WebEditor.ViewModels;
@model ConfigurationEditViewModel
@{
    ViewData["Title"] = "Configuration Edit";
}

<div>
    <form asp-controller="Configuration" asp-action="Edit" method="post" asp-antiforgery="true">
        <input asp-for="Id" type="hidden" />

        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label">Name:</label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Value" class="col-sm-2 col-form-label">Value:</label>
            <div class="col-sm-10">
                <input asp-for="Value" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="ApplicationName" class="col-sm-2 col-form-label">Application Name:</label>
            <div class="col-sm-10">
                <input asp-for="ApplicationName" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-2">
                <div class="form-check">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label asp-for="IsActive" class="form-check-label">Active</label>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <button type="submit" class="btn btn-primary mb-2">Save</button>
        </div>
    </form>
</div>
